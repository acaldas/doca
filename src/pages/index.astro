---
import Header from "../components/header.astro";
import Intro from "../components/intro.astro";
import Team from "../components/team.astro";
import Slide from "../components/slide.astro";
import Services from "../components/services.astro";
import Contact from "../components/contact.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import SlideItem from "../components/slide-item.astro";
---

<BaseLayout title="DOCA">
  <Header links={["A Doca", "Equipa", "Contatos"]} />
  <main>
    <Slide>
      <SlideItem background="bg-background"><Intro /></SlideItem>
      <SlideItem title="A Doca" background="bg-blue"><Services /></SlideItem>
      <SlideItem title="Equipa" background="bg-yellow"><Team /></SlideItem>
      <SlideItem title="Contatos" background="bg-background">
        <Contact />
      </SlideItem>
    </Slide>
  </main>
</BaseLayout>
